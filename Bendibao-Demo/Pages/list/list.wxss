/* Pages/list/list.wxss */
/*全局样式*/
Page{
  background-color: #fff;
}
/*商店模块样式*/
.shop{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}
/*商店图片样式*/
.shop-img{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
/*商店信息样式*/
.shop-info{
  width: 520rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
  line-height: 1.5;
}
/*商店标题样式*/
.shop-title .shop-tel .shop-address .shop-time{
  font-size: 16px;
  color: #333;
  width: 380rpx;
}
/*商店评分样式*/
.shop-star{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}