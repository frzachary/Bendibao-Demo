.content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/*首页分隔条*/
.divider {
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.1) inset;
}
.bdr{    
    /* 2.3.子绝父相 */
    position: relative;
}
.bdr::after {
    /* 2.1.通过伪元素绘制一像素的右边框 */
    content: "";
    width: 1rpx;
    height: 100%;
    background-color: #ddd;
    /* 2.2.定位，不占位置 */
    position: absolute;
    right: 0;
    top: 0;
}
/*封装箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}
/* 功能封装6：列表封装 */

.cell {
    font-size: 16px;
    background-color: #fff;
}

.cell-item {
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 30rpx;
}
/* 星星评分功能 */
.star-after{
  color: #e2e2e2;
}
.star-before{
  color: #f19e38;
  position: absolute;
  left: 0;
  top: 0;
  width: 90%;
  overflow: hidden;
}

/* 超出单行宽度时变成省略号 */
.ell{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 加载更多样式 */

.loadmore {
    color: #888;
    font-size: 16px;
    line-height: 100rpx;
    text-align: center;
}

.loadmore.loading::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    margin-top: -10rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
    animation: loading 1s steps(12) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(-360deg);
    }
}
